\newcommand{\kelvin}{\unitof{K}}
\newcommand{\kelvins}{\kelvin}

\newcommand{\candela}{\unitof{cd}}
\newcommand{\candelas}{\candela}

\newcommand{\mole}{\unitof{mol}}
\newcommand{\moles}{\mole}
\newcommand{\mol}{\mole}
\newcommand{\mols}{\mole}

% SI Derived Units
\newcommand{\hertz}{\unitof{Hz}}

\newcommand{\steradian}{\unitof{sr}}
\newcommand{\steradians}{\steradian}

\newcommand{\newton}{\unitof{N}}
\newcommand{\newtons}{\newton}

\newcommand{\pascal}{\unitof{Pa}}
