%
% Shortcuts for units, all units here are given by their SI name
%
\NeedsTeXFormat{LaTeX2e}[1995/12/01]
\ProvidesClass{school-style-units}
\usepackage{school-style-math}

% These let us make units
\newcommand{\unitprefix}[1]{\mathrm{#1}}
\newcommand{\unitprefixgreek}[1]{#1}
\newcommand{\unitof}[1]{\mathrm{#1}}
\newcommand{\unitgreek}[1]{#1}
\newcommand{\unitfrac}[2]{\frac{#1}{#2}}
\newcommand{\unitmult}{}

% SI Prefixes
\newcommand{\fempto}{\unitprefix{f}}
\newcommand{\nano}{\unitprefix{n}}
\newcommand{\pico}{\unitprefix{p}}
\newcommand{\micro}{\unitprefixgreek{\mu}}
\newcommand{\mili}{\unitprefix{m}}
\newcommand{\centi}{\unitprefix{c}}
\newcommand{\deci}{\unitprefix{d}}
\newcommand{\kilo}{\unitprefix{k}}
\newcommand{\mega}{\unitprefix{M}}

% SI Base Units (except for gram)
\newcommand{\meter}{\unitof{m}}
\newcommand{\meters}{\meter}

\newcommand{\gram}{\unitof{g}}
\newcommand{\grams}{\gram}

\newcommand{\second}{\unitof{s}}
\newcommand{\seconds}{\second}

\newcommand{\ampere}{\unitof{A}}
\newcommand{\amperes}{\ampere}
