\newcommand{\sievert}{\unitof{Sv}}
\newcommand{\sieverts}{\sievert}

\newcommand{\katal}{\unitof{kat}}
\newcommand{\katals}{\katal}

% SI Complex units
\newcommand{\ampspermeter}{\unitfrac{\amps}{\meter}}
\newcommand{\ampspersquaremeter}{\unitfrac{\amps}{\meter^2}}
\newcommand{\ampspermeterseconds}{\unitfrac{\amps}{\meter\unitmult\seconds}}
\newcommand{\ampspermetermicroseconds}{\unitfrac{\amps}{\meter\unitmult\micro\seconds}}

\newcommand{\centimeterspersecond}{\unitfrac{\centi\meters}{\second}}

\newcommand{\centimeterssquaredpervoltseconds}{\unitfrac{\centi\meters^2}{\volt\unitmult\seconds}}

\newcommand{\coloumbspermeter}{\unitfrac{\coloumbs}{\meter}}
\newcommand{\coloumbspermetersquared}{\unitfrac{\coloumbs}{\meter^2}}
\newcommand{\coloumbspersquaremeter}{\unitfrac{\coloumbs}{\meter^2}}
\newcommand{\coloumbspermetercubed}{\unitfrac{\coloumbs}{\meter^3}}
\newcommand{\coloumbspercubicmeter}{\unitfrac{\coloumbs}{\meter^3}}
\newcommand{\coloumbspercubiccentimeter}{\unitfrac{\coloumbs}{\centi\meter^3}}

\newcommand{\electronvoltseconds}{\electronvolt\unitmult\seconds}

\newcommand{\gramspercubiccentimeter}{\unitfrac{\grams}{\centi\meter^{3}}}

\newcommand{\meterspersecond}{\unitfrac{\meters}{\second}}

\newcommand{\ohmcentimeters}{\ohm\unitmult\centi\meters}

\newcommand{\percubiccentimeter}{\centi\meter^{\inv 3}}

\newcommand{\siemenspermeter}{\unitfrac{\siemens}{\meter}}

\newcommand{\voltmeters}{\volt\unitmult\meters}
\newcommand{\voltseconds}{\volt\unitmult\seconds}
\newcommand{\voltspermeter}{\unitfrac{\volts}{\meter}}
\newcommand{\voltspercentimeter}{\unitfrac{\volts}{\centi\meter}}
\newcommand{\voltspersquarecentimeter}{\unitfrac{\volts}{\centi\meter^2}}
\newcommand{\voltspermeterseconds}{\unitfrac{\volts}{\meter\unitmult\seconds}}

\newcommand{\wattspersquaremeter}{\unitfrac{\watt}{\meter^2}}

