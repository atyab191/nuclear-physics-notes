\begin{align}
f(V) &= 4 \pi \left( \frac{M}{2 \pi k_B T} \right)^{3/2} V^2 \exp \left( - \frac{MV^2}{2 k_B T} \right) \\
v \sigma_s (v) &= \int \dV (v-V) \sigma(|v-V|) f(V) \\
\sigma(v) &= \frac{\sigma_{so}}{\beta^2} \left[ \left(\beta^2 + \frac{1}{2} \right) \mathrm{erf}(\beta) + \frac{1}{\sqrt{\pi}} \beta e^{-\beta^2} \right] \\
\beta^2 &= \frac{A E}{k_B T}\\
\mathrm{erf}(\beta) &= \int_0^{\beta} \frac{2}{\sqrt{\pi}} e^{-t^2} \dt = 
\begin{dcases*}
\to 0 & $\beta \to 0$ \\
\to 1 & $\beta \to \infty$ 
\end{dcases*} \\
\sigma (v) &= 
\begin{dcases*}
\mbox{constant } \frac{1}{v}& $E \ll k_B T$ \\
\mbox{constant } \sigma_{so}, \mathrm{E-independent, isotropic} & $E \gg k_B T$ 
\end{dcases*} 
\end{align}
